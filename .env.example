# Dolphin Anty API Configuration
DOLPHIN_ANTY_HOST=http://localhost:3001
DOLPHIN_ANTY_TOKEN=your_dolphin_anty_token_here

# Proxy Configuration (iProxy)
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password
PROXY_TYPE=http

# Captcha Service Configuration
CAPTCHA_SERVICE=2captcha
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here
CAPTCHA_TIMEOUT=120

# Google Account Configuration
GOOGLE_SIGNUP_DELAY_MIN=5000
GOOGLE_SIGNUP_DELAY_MAX=15000
PHONE_VERIFICATION_TIMEOUT=300
EMAIL_VERIFICATION_TIMEOUT=300

# Kilocode Configuration
KILOCODE_BASE_URL=https://kilocode.com
KILOCODE_REGISTRATION_DELAY=10000
BONUS_COLLECTION_TIMEOUT=60

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1366
BROWSER_VIEWPORT_HEIGHT=768
USER_DATA_DIR=./temp/profiles

# Automation Settings
MAX_RETRIES=3
RETRY_DELAY=30000
CONCURRENT_INSTANCES=1
REGISTRATION_BATCH_SIZE=10
COOLDOWN_BETWEEN_BATCHES=300000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Development Settings
DEBUG_MODE=false
SCREENSHOT_ON_ERROR=true
SAVE_HTML_ON_ERROR=false
SLOW_MO=100

# ===============================
# SMS / Phone Verification (Free-friendly mock)
# Provider selection: mock (manual code entry via ENV, file, or prompt)
SMS_PROVIDER=mock

# Phone number to use on the Google phone step (for testing)
# Example: US test number you manually control or a placeholder to pass UI
SMS_MANUAL_PHONE=+12025550123

# How to provide the SMS code to the program:
# - env:    read from SMS_CODE env var (set it just-in-time)
# - file:   read/poll ./temp/sms_code.txt (or your path) for a 4-8 digit code
# - prompt: program will wait for manual input on stdin
SMS_CODE_INPUT_MODE=prompt
SMS_CODE_FILE=./temp/sms_code.txt
SMS_CODE_POLL_INTERVAL_MS=2000
SMS_CODE_CLEAR_FILE=false

# Development toggles
# If true, skip the phone verification step entirely
SKIP_PHONE_VERIFICATION=false

# ===============================
# SMS / Phone Verification (Twilio)
# To enable Twilio polling, set SMS_PROVIDER=twilio and provide the credentials below.
# Note: Twilio trial accounts may block inbound testing and require the number to be owned by the same project/subaccount.
# Uncomment the next line to switch providers once you have a fully-capable setup.
# SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_INBOUND_NUMBER=+1XXXXXXXXXX
# OPTIONAL:
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_POLL_INTERVAL_MS=3000
TWILIO_POLL_TIMEOUT_MS=300000
TWILIO_INBOUND_SEARCH_WINDOW_MINUTES=15
TWILIO_SUBACCOUNT_SID=ACyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy
TWILIO_WEBHOOK_URL=https://your-server.example.com/twilio/inbound-sms